@model IEnumerable<SachOnline.Models.GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/GioHang/_LayoutGioHang.cshtml";
}

<h2 style="text-align:center;">THÔNG TIN GIỎ HÀNG</h2>
<table border="1">
    <tr style="background-color:#9ca1a4; font-size:15px; font-weight:bold; text-align:center;">
        <td>Mã Sách</td>
        <td>Tên Sách</td>
        <td>Ảnh Bìa</td>
        <td>Số Lượng</td>
        <td>Số Ngày Thuê Xe</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td align="center">@item.iMaXe</td>
    <td>@item.sTenXe</td>
    <td><img src="~/Images/Sach/@item.sAnhBia" style="width:100px;"></td>
    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { iMaXe = item.iMaXe }))
    {
        <td align="center">
            <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:#f4ff94" />
        </td>
        <td align="center">
            <input type="number" min="1" name="txtSoNgayThue" value="@item.iSoNgayThue" style="background-color:#f4ff94" />
        </td>
        <td align="center">@string.Format("{0:#,##0,0}", @item.dDonGia)</td>
        <td align="center">@string.Format("{0:#,##0,0}", @item.dThanhTien)</td>
        <td><a href="@Url.Action("ChiTietSach","SachOnline", new { id = item.iMaXe})">Chi tiết</a></td>
        <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaXe = item.iMaXe })</td>
        <td>
            <input type="submit" value="Cập nhật" />
        </td>
    }
</tr>
    }
<tr>
    <td colspan="4" style="text-align:right; color:red; font-weight:bold; padding-right:5px;">
        Tổng số lượng: @string.Format("{0:#,##0}", @ViewBag.TongSoLuong)
    </td>
    <td colspan="1" style="text-align:right; color:red; font-weight:bold; padding-right:5px;">
        Tổng ngày thuê: @string.Format("{0:#,##0}", @ViewBag.TongSoNgayThue)
    </td>
    <td colspan="6" style="text-align:center; color:red; font-weight:bold;"> Tổng tiền: @string.Format("{0:#,##0,0}", @ViewBag.TongTien) USD</td>
</tr>
    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="10">
            @Html.ActionLink("Xóa giỏ hàng", "XoaGioHang")
        </td>
    </tr>
    <tr style="font-weight: bold; text-align: center; color: blue">
        <td colspan="10">
            @Html.ActionLink("Đặt Hàng", "DatHang", "GioHang")
        </td>
    </tr>
</table>
<div>
    <a href="@Url.Action("Index","SachOnline")">Quay lại trang chủ</a>
</div>



